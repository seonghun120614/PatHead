        script(src='/javascript.js')
    body
        header
            a(href="/")
                h1 PAT HEAD BLOG
        main
            aside ONLINE<br>CHATTING
                div(id='aside_button') &gt;
                div(id='aside_content')
                div(id='aside_chatting')
            div(id='window')
                nav
                    ul(class='list')
                        li Study 
                            ul(class="contents")
                                li 
                                    a(class="menu" href="/menu/study/computer") Computer
                                li
                                    a(class="menu" href="/menu/study/statistics") Statistics
                                li
                                    a(class="menu" href="/menu/study/math") Math
                                li
                                    a(class="menu" href="/menu/study/ai") AI
                                li
                                    a(class="menu" href="/menu/study/data technology") DT
                        li Rest
                            ul(class="contents")
                                li
                                    a(class="menu" href="/menu/rest/free") Free!
                                li
                                    a(class="menu" href="/menu/rest/game") Game
                                li 
                                    a(class="menu" href="/menu/rest/life") Life
                                li 
                                    a(class="menu" href="/menu/rest/style") Style
                                li 
                                    a(class="menu" href="/menu/rest/trip") Trip
                        li
                            a(class="menu" href="/drive") My Drive
                        li
                            a(class="menu" href="/inf") MY Inf.
                article
                    - var description
                        if typeof(description)==="object"
                            h3= title
                            each i in description
                                a(href=path + "/"+i)
                                    p(class='description')= i

                        else if title=="Title."
                            br
                            form(action="uploads" method="post")
                                div(id="path")
                                    div
                                        label(for="menu") Choose Menu:

                                        select(id="menu")
                                            option(value="") --Please choose an option--
                                            option(value="rest") Rest
                                            option(value="study") Study
                                    div
                                        label(for="field") Choose Field:

                                        select(id="field")
                                            option(value="") --Please choose an option--
                                    div
                                        label(for="id") Choose Index :

                                        select(id="id")
                                            option(value="") --Please choose an option--
                                p
                                    h3= title
                                        input(id="title" type="text" name="title" placeholder="Title")
                                p= description
                                    textarea(id="description" name='description' placeholder="Contents")
                                p
                                    input(type='submit' id="submit")
                                    
                        else
                            h3= title
                            p(class="description")= description
                a(href="/write")
                    div(id='write') write
