public class Problem {
    public static void main(String[] args){
        int num1 = 16;
        int num2 = 44;
        int a = num1++; //나중 연산
        int b = --num2; //먼저 연산
        System.out.printf("%d %d", a, b);

    }
}
==========================
import java.util.Scanner;
public class Problem{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in); //Scanner객체 생성
        int data = sc.nextInt(); //입력받은 값을 int형으로 변환후 저장
        //말고도 next변수형을 하면됨.

        System.out.println("사용자가 입력한 데이터" + data);
    }
}
=========================
import java.util.Random;

public class Problem {
    public static void main(String[] args){
        // r이라는 난수를 생성하는 객체로 저장
        // 해당 r의 범위는 0<=  <n까지
        
        Random r = new Random();
        // r.nextInt()는 r을 Int로 바꿔서 출력함
        System.out.println("임의의 수 " + r.nextInt(1));
        System.out.println("임의의 수 " + r.nextInt(5));
        System.out.println("임의의 수 " + r.nextInt(10));
        //내가 원하는 범위를 잡을때
        System.out.println("임의의 수 " + r.nextInt((5-1+1) +1));
    } 
}
